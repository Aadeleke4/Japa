<!-- app/views/users/edit.html.erb -->
<h1>Edit User</h1>

<%= form_for @user, url: user_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :province_id %>
    <%= f.collection_select :province_id, Province.all, :id, :name, prompt: 'Select province' %>
  </div>

  <div class="actions">
    <%= f.submit 'Update' %>
  </div>
<% end %>
